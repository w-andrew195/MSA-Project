<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabs.CustomVision" Title="SnapShop">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Margin="20" Orientation="Vertical">
            <Button Text="Capture" Clicked="loadCamera" />
            <Image x:Name="image" />
            <Label x:Name="TagLabel" FontAttributes="Bold"></Label>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>